                <ResourceDictionary Source="Styles/NormalControlStyles/Icons.xaml"/>
                <ResourceDictionary Source="Styles/NormalControlStyles/Text.xaml"/>
                <ResourceDictionary Source="Styles/NormalControlStyles/TextBox.xaml"/>
                <ResourceDictionary Source="Styles/NormalControlStyles/CheckBox.xaml"/>
                <ResourceDictionary Source="Styles/NormalControlStyles/ComboBox.xaml"/>

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        
    </Application.Resources>
</Application>
